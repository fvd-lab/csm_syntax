{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "CSM",
  "scopeName": "source.csm",
  "fileTypes": ["csm"],
  
  "_comment_keywords": "Keywords are loaded from keywords_control.txt and keywords_function.txt during installation",
  
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.hash.csm",
          "begin": "#",
          "end": "$",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.csm"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.csm",
          "match": "(?i)\\b({{CONTROL_KEYWORDS}})\\b"
        },
        {
          "name": "keyword.other.csm",
          "match": "(?i)\\b({{FUNCTION_KEYWORDS}})\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.csm",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.csm",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.csm",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.csm",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.csm",
          "match": "-?\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.csm",
          "match": "-?\\b\\d+\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.special.csm",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "variable.other.dollar.csm",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "variable.other.csm",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.csm",
          "match": "[+\\-*/=<>!&|]"
        }
      ]
    }
  }
}